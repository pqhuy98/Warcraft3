    "@types/fs-extra": "8.1.1",
    "@types/glob": "^8.1.0",
    "@types/node": "12.19.1",
    "@types/pako": "1.0.1",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
