  "watch": {
    "build:defs": {
      "patterns": [
        "./maps/*"
      ],
      "extensions": "lua",
      "legacyWatch": true
    },
    "sound": {
      "patterns": [
        "./sounds/**/*.mp3",
        "./scripts/sound.ts"
      ],
      "legacyWatch": true
    }
  }
}
