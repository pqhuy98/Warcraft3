    "npm-watch": "^0.11.0",
    "openai": "^4.54.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.33.4",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "tstl-doender-plugin": "^1.1.0",
    "tsutils": "3.17.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^7.12.0",
    "typescript-to-lua": "^1.25.1",
    "war3-transformer": "2.0.0",
